extends layouts/base

block content
    .form-container
        form(action=routes.editVideo(video.id), method='post')
            input(type="text", name='title', placeholder='Title', value=video.title)
            textarea(name="description", cols="30", rows="5")= video.description
            input(type="submit", name='update', value='UpdateVideo')
        a.form-container__link(href=routes.deleteVideo(video.id)) 
            button.delete Delete Video