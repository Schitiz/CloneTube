extends layouts/base

block content
    .form-container
        form(action=`${routes.videos}${routes.upload}`, method='post')
            label(for='video-file') Video   File
            input(type='file', id='file', name='Choose File')
            input(type="text", name='title', placeholder='Title', required=true)
            textarea(name='description', placeholder='Description', required=true)
            input(type="submit", name='upload', value='Upload Video', required=true)