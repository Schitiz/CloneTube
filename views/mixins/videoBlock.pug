mixin videoBlock(video={})
    .videoBlock
        a(href=routes.videoDetail(video.id))
            video.video-block__thumbnail(src=video.videoFile, controls=true)
            h4.video-block__title= video.title
            if video.views === 1
                h6.videoBlock__views 1 view
            else
                h6.videoBlock__views #{video.views} views